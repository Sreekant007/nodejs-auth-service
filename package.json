{
  "name": "nodejs-auth-service",
  "version": "1.0.0",
  "description": "Production-ready Node.js authentication service demonstrating JWT-based auth, role-based access control, clean architecture, and backend best practices.",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.19.0"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sreekant007/nodejs-auth-service.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "authentication",
    "jwt",
    "backend"
  ],
  "author": "Shrikant Govande",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Sreekant007/nodejs-auth-service/issues"
  },
  "homepage": "https://github.com/Sreekant007/nodejs-auth-service#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.2.2",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  }
